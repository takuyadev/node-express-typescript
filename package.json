{
  "name": "node-express-ts",
  "version": "1.0.0",
  "description": "Node.js + Express.js + TypeScript template project.",
  "main": "./src/app.ts",
  "scripts": {
    "status": "tsc --p tsconfig.json --listFiles",
    "test": "jest",
    "start": "node -r module-alias/register ./dist/app.js",
    "build": "tsc -p ./tsconfig.prod.json",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/app.ts"
  },
  "_moduleAliases": {
    "@/routes": "dist/routes",
    "@/data": "dist/data",
    "@/middleware": "dist/middleware",
    "@/controllers": "dist/controllers",
    "@/db": "dist/db",
    "@/utils": "dist/utils"
  },
  "author": "takuyadev",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "hpp": "^0.2.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
